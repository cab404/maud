<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <declare-styleable name="AppTheme">
        <attr name="inverse_bg_color" format="color" />
        <attr name="font_color" format="color" />
        <attr name="new_background" format="reference" />
        <attr name="settings_theme" format="reference" />
        <attr name="main_background_color" format="color" />
        <attr name="main_foreground_color" format="color" />
        <attr name="rounded_background" format="reference" />
        <attr name="inverse_action_bar_color" format="color" />
        <attr name="alert_dialog_nobg_theme" format="reference" />
        <attr name="best_pony" format="reference" />
    </declare-styleable>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
        <item name="inverse_bg_color">#fff</item>
        <!--<item name="android:textColor">#fff000</item>-->
        <item name="inverse_action_bar_color">@color/abc_primary_text_material_dark</item>
        <item name="main_foreground_color">@color/primary_material_dark</item>
        <item name="main_background_color">@color/background_material_dark</item>
        <item name="new_background">@drawable/new_background_dark</item>
        <item name="rounded_background">@drawable/rounded_background_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="alert_dialog_nobg_theme">@style/Theme.AppCompat.Dialog.Alert.NoBG</item>
        <item name="best_pony">@drawable/anim_luna</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
        <item name="android:textColor">#111</item>
        <item name="android:textColorPrimary">#333</item>
        <item name="android:textColorSecondary">#333</item>
        <item name="inverse_bg_color">#111</item>
        <item name="inverse_action_bar_color">@color/abc_primary_text_material_dark</item>
        <item name="main_foreground_color">@color/primary_material_light</item>
        <item name="main_background_color">@color/background_material_light</item>
        <item name="new_background">@drawable/new_background_light</item>
        <item name="rounded_background">@drawable/rounded_background_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="alert_dialog_nobg_theme">@style/Theme.AppCompat.Light.Dialog.Alert.NoBG</item>
        <item name="best_pony">@drawable/anim_luna</item>
    </style>

    <style name="AppThemeDark.Green">
        <item name="colorPrimary">#42787e</item>
        <item name="colorPrimaryDark">#37686e</item>
        <item name="colorAccent">#42787e</item>
    </style>

    <style name="AppThemeLight.Rariteh">
        <item name="colorPrimary">#5e50a1</item>
        <item name="colorPrimaryDark">#4c4589</item>
        <item name="best_pony">@drawable/anim_rarity</item>
        <item name="colorAccent">#4c4589</item>
    </style>

    <style name="AppThemeLight.Celestia">
        <item name="colorPrimary">#ffbfe9</item>
        <item name="colorPrimaryDark">#ffa7e1</item>
        <item name="best_pony">@drawable/anim_celestia</item>
        <item name="colorAccent">#f6cf82</item>
        <item name="inverse_bg_color">#7d2e7a</item>
    </style>

    <style name="AppThemeLight.Applejack">
        <item name="colorPrimary">#ed2244</item>
        <item name="colorPrimaryDark">#b91934</item>
        <item name="best_pony">@drawable/anim_applejack</item>
        <item name="colorAccent">#ffc563</item>
        <item name="inverse_bg_color">#b91934</item>
    </style>

    <style name="AppThemeDark.Applejack">
        <item name="colorPrimary">#ed2244</item>
        <item name="colorPrimaryDark">#b91934</item>
        <item name="best_pony">@drawable/anim_applejack</item>
        <item name="colorAccent">#ffb74d</item>
        <item name="inverse_bg_color">#b91934</item>
    </style>

    <style name="AppThemeLight.Moondancer">
        <item name="colorPrimary">#ab1a54</item>
        <item name="colorPrimaryDark">#921648</item>
        <item name="best_pony">@drawable/anim_moondancer</item>
        <item name="colorAccent">#744d92</item>
        <item name="inverse_bg_color">#20172d</item>
    </style>

    <style name="AppThemeDark.Moondancer">
        <item name="colorPrimary">#ab1a54</item>
        <item name="colorPrimaryDark">#921648</item>
        <item name="best_pony">@drawable/anim_moondancer</item>
        <item name="colorAccent">#744d92</item>
        <item name="inverse_bg_color">#744d92</item>
    </style>

    <style name="Theme.AppCompat.Dialog.Alert.NoBG">
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="Theme.AppCompat.Light.Dialog.Alert.NoBG">
        <item name="android:colorBackgroundCacheHint">@null</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <string-array name="theme_values">
        <item>AppThemeLight</item>
        <item>AppThemeDark</item>
        <item>AppThemeDark.Green</item>
        <item>AppThemeLight.Rariteh</item>
        <item>AppThemeLight.Celestia</item>
        <item>AppThemeLight.Applejack</item>
        <item>AppThemeDark.Applejack</item>
        <item>AppThemeLight.Moondancer</item>
        <item>AppThemeDark.Moondancer</item>
    </string-array>

    <style name="SettingsThemeDark" parent="android:Theme" />

    <style name="SettingsThemeLight" parent="android:Theme.Light" />

</resources>