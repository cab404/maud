<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.ponyhawks.android"
    tools:ignore="UnusedAttribute">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".statics.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeDark">

        <activity
            android:name=".activity.MainActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:launchMode="singleTask">
        </activity>

        <activity android:name=".activity.ProfileActivity"
            android:configChanges="keyboard|orientation|screenSize"
            >
            <intent-filter>
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="http" android:host="ponyhawks.ru/profile" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SettingsActivity"
            android:parentActivityName=".activity.MainActivity"
            android:theme="?attr/settings_theme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.ponyhawks.android.activity.MainActivity" />
        </activity>

        <activity
            android:name=".activity.TopicActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.ponyhawks.android.activity.MainActivity" />
            <intent-filter>
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="http" android:host="ponyhawks.ru" android:pathPrefix="/blog" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LetterActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.ponyhawks.android.activity.MainActivity" />
            <intent-filter>
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="http" android:host="ponyhawks.ru" android:pathPrefix="/talk" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="imgur-api-key"
            android:value="a2729ecb14b91ba" />
    </application>

</manifest>
